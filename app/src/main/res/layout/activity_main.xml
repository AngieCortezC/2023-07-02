<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ptxt1Correo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1Titulo"
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:background="#C13A3A"
        android:fontFamily="@font/roboto_bold"
        android:text="Uso de Volley"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt2Correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Correo:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="76dp" />

    <EditText
        android:id="@+id/etxt1CorreoElec"
        android:layout_width="265dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="65dp"
        android:height="48dp"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:scaleType="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etxt2Contrasena"
        android:layout_width="261dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="59dp"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:scaleType="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt3Clave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Clave:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="129dp" />

    <Button
        android:id="@+id/btn1Consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:background="#05135E"
        android:backgroundTint="#061047"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/roboto_bold"
        android:onClick="btnConsultar"
        android:text="Obtener datos"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt4Token"
        android:layout_width="342dp"
        android:layout_height="410dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="283dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#050505"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>